---
const { label, url } = Astro.props;
const currentPath = Astro.url.pathname
const currentUrl = currentPath.endsWith('/') ? currentPath.slice(0, -1) : currentPath
---

<a data-nav class={currentUrl === url ? "active" : ""} href={url}>{label}</a>

<style>
@layer layout {
    a {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        gap: var(--size-2);

        height: var(--size-px-7);
        text-decoration: none;
        color: light-dark(var(--gray-8), var(--gray-4));
        text-transform: capitalize;
        padding-inline: var(--size-3);
        border-radius: 10px 40px 40px 10px;
        position: relative;

        &::before {
            content: '';
            display: block;
            width: 2px;
            height: var(--size-2);
            background-color: var(--gray-5);
            border-radius: var(--radius-drawn-4);

            transition: width .25s ease;
        }

        &::after {
            content: '';
            display: block;
            position: absolute;
            z-index: -1;
            inset: 0;
            border-radius: 10px 40px 40px 10px;
        }

        &:hover,
        &:focus {
            &::before {
                width: var(--size-3);
            }
            &::after {
                background-color: light-dark(var(--gray-1), var(--gray-10));
            }
        }

        &.active {
            &::before {
                width: var(--size-3);
                background-color: light-dark(var(--green-7), var(--green-4));
            }

            &::after {
                background-color: light-dark(var(--green-0), var(--green-10));
            }
        }


        &.active:focus {
            background-color: var(--green-1);
        }
    }
}
</style>