---
import Layout from "../layouts/Layout.astro"
import PageTitle from "../components/PageTitle.astro"
import SectionTitle from "../components/SectionTitle.astro"

const contents = [
    {
        url: 'note-reading',
        name: 'Reading'
    },
    {
        url: 'note-tools',
        name: 'Tools'
    },
    {
        url: 'ui-ux-tools',
        name: 'UI/UX'
    },
    {
        url: 'state-of-web',
        name: 'State of Web'
    }
]
---

<Layout contents={contents}>
    <PageTitle>Note Book</PageTitle>

    <SectionTitle id="note-reading">Reading</SectionTitle>
    <ul data-reading-list>
        <li>
            <a href="https://www.joshwcomeau.com/css/understanding-layout-algorithms/" target="_blank">Josh W Comeau</a>
        </li>
        <li>
            <a href="https://www.bram.us" target="_blank">Bram.us</a>
        </li>
        <li>
            <a href="https://ericportis.com" target="_blank">Eric Portis</a>
        </li>
        <li>
            <a href="https://labs.jensimmons.com" target="_blank">Jen Simmons: Layout Lab</a>
        </li>
        <li>
            <a href="https://www.sarasoueidan.com" target="_blank">Sara Soueidan: accessibility</a>
        </li>
        <li>
            <a href="https://lea.verou.me" target="_blank">Lea Verou</a>
        </li>
        <li>
            <a href="https://utopia.fyi/blog/graph/" target="_blank">Fluid Typographic</a>
        </li>
        <li>
            <a href="https://css-tricks.com" target="_blank">CSS Tricks</a>
        </li>
        <li>
            <a href="https://ishadeed.com" target="_blank">Ahmad Shadeed</a>
        </li>
        <li>
            <a href="https://www.smashingmagazine.com/articles/" target="_blank">Smashing Magazine</a>
        </li>
        <li>
            <a href="https://smashing-freiburg-2024.netlify.app" target="_blank">Symphony Of The Web (2024)</a>
        </li>
    </ul>

    <SectionTitle id="note-tools">Tools</SectionTitle>
    <ul data-tool-list>
        <li>
            <a href="https://caniuse.com/" target="_blank">Can I use _?</a>
        </li>
        <li>
            <a href="https://oklch.com/" target="_blank">OKLCH</a>
        </li>
        <li>
            <a href="https://gradient.style/" target="_blank">HD Gradients</a>
        </li>
        <li>
            <a href="https://yqnn.github.io/svg-path-editor/" target="_blank">SVG path Editor</a>
        </li>
        <li>
            <a href="https://app.leonardo.ai/auth/login?callbackUrl=%2Fimage-generation" target="_blank">Leonardo.Ai</a>
        </li>
        <li>
            <a href="https://www.flaticon.com/?k=1623562445513" target="_blank">Falt Icons</a>
        </li>
        <li>
            <a href="https://editor.p5js.org/" target="_blank">p5 Editor</a>
        </li>
        <li>
            <a href="https://anicollection.github.io/#/" target="_blank">Keyframe animations</a>
        </li>
        <li>
            <a href="https://open-props.style/" target="_blank">Open Props</a>
        </li>
    </ul>

    <SectionTitle id="ui-ux-tools">UI/UX</SectionTitle>
    <ul>
        <li>
            <a href="https://open-ui.org/" target="_blank">Open UI</a>
        </li>
    </ul>

    <SectionTitle id="state-of-web">State of Web</SectionTitle>
    <ul>
        <li>
            <a href="https://2024.stateofhtml.com/en-US/features/" target="_blank">State of HTML 2024</a>
        </li>
        <li>
            <a href="https://2024.stateofcss.com/en-US/features/" target="_blank">State of CSS 2024</a>
        </li>
        <li>
            <a href="https://survey.devographics.com/en-US/survey/state-of-js/2024/outline/1" target="_blank">State of JavaScript 2024</a>
        </li>
    </ul>
</Layout>