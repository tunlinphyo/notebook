---
import Layout from "../../../layouts/Layout.astro"
import PageTitle from "../../../components/PageTitle.astro";
---

<Layout>
    <PageTitle>View Transition</PageTitle>

    <ul class="group">
        <li class="card">
            <a data-view="image1" href="/examples/view-transition/image-1">
                <img style="view-transition-name: image1Img;" src="/images/1.png" alt="Engineering Team">
                <h4 style="view-transition-name: image1Title;">Engineering Team</h4>
            </a>
        </li>
        <li class="card">
            <a data-view="image2" href="/examples/view-transition/image-2">
                <img style="view-transition-name: image2Img;" src="/images/2.png" alt="In The Office">
                <h4 style="view-transition-name: image2Title;">In The Office</h4>
            </a>
        </li>
        <li class="card">
            <a data-view="image3" href="/examples/view-transition/image-3">
                <img style="view-transition-name: image3Img;" src="/images/3.png" alt="Work Friends">
                <h4 style="view-transition-name: image3Title;">Work Friends</h4>
            </a>
        </li>
        <li class="card">
            <a data-view="image4" href="/examples/view-transition/image-4">
                <img style="view-transition-name: image4Img;" src="/images/4.png" alt="Designer">
                <h4 style="view-transition-name: image4Title;">Coffee with Friends</h4>
            </a>
        </li>
        <li class="card">
            <a data-view="image5" href="/examples/view-transition/image-5">
                <img style="view-transition-name: image5Img;" src="/images/5.png" alt="Pair Programming">
                <h4 style="view-transition-name: image5Title;">Pair Programming</h4>
            </a>
        </li>
    </ul>
</Layout>

<style>
.group {
    margin: 0;
    padding: 0;
    list-style: none;

    --size: 180px;

    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(var(--size), 1fr));
    grid-gap: var(--size-1);

    @media (max-width:500px) {
        --size: 120px;
    }

    .card {
        background-color: ButtonFace;
        border-radius: var(--radius-2);

        & a {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            padding: var(--size-2);
            padding-block-end: var(--size-3);
            gap: var(--size-2);

            & img {
                width: 100%;
                aspect-ratio: 3 / 2;
                object-fit: cover;
            }
            & h4 {
                width: 100%;
                margin: 0;
                font-size: var(--font-size-2);
                padding-inline: var(--size-2);
                color: ButtonText;
            }
        }
    }
}
</style>